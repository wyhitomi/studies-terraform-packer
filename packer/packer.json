{
  "variables": {
    "arm_client_id": "{{env `ARM_CLIENT_ID`}}",
    "arm_client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "arm_tenant_id": "{{env `ARM_TENANT_ID`}}",
    "arm_subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "cloudflare_api_token": "{{env `CLOUDFLARE_API_TOKEN`}}",
    "cloudflare_api_key": "{{env `CLOUDFLARE_API_KEY`}}",
    "cloudflare_email": "{{env `CLOUDFLARE_EMAIL`}}",
    "admin_user_public_key": "{{env `ADMINUSER_PUBLIC_KEY`}}"
  },
  "builders": [{
    "type": "azure-arm",

    "client_id": "{{user `arm_client_id`}}",
    "client_secret": "{{user `arm_client_secret`}}",
    "tenant_id": "{{user `arm_tenant_id`}}",
    "subscription_id": "{{user `arm_subscription_id`}}",

    "managed_image_resource_group_name": "vortx-metabase-resources",
    "managed_image_name": "vortx-metabase-image",

    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",

    "azure_tags": {
        "dept": "Engineering",
        "task": "Image deployment"
    },

    "location": "Central US",
    "vm_size": "Standard_B1s"
  }],
  "provisioners": [{
      "type": "file",
      "source": "packer/metabase.service",
      "destination": "/tmp/metabase.service"
    },
    {
      "type": "file",
      "source": "packer/metabase.conf",
      "destination": "/tmp/metabase.conf"
    },
    {
      "type": "file",
      "source": "packer/metabase",
      "destination": "/tmp/metabase"
    },
    {
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "apt-get update",
      "apt-get upgrade -y",
      "apt -y install nginx default-jre",
      "java -version",
      "mkdir -p /opt/metabase",
      "curl -o /opt/metabase/metabase.jar https://downloads.metabase.com/v0.35.4/metabase.jar",
      "addgroup --quiet --system metabase",
      "adduser --quiet --system --ingroup metabase --no-create-home --disabled-password metabase",
      "chown -R metabase:metabase /opt/metabase",
      "touch /var/log/metabase.log",
      "chown metabase:metabase /var/log/metabase.log",
      "touch /etc/default/metabase",
      "chmod 640 /etc/default/metabase",
      "mv /tmp/metabase.service /etc/systemd/system/metabase.service",
      "mv /tmp/metabase.conf /etc/rsyslog.d/metabase.conf",
      "systemctl daemon-reload",
      "systemctl start metabase",
      "systemctl enable metabase",
      "rm -rf /etc/nginx/sites-available/default",
      "rm -rf /etc/nginx/sites-enabled/default",
      "mv /etc/metabase.nginx.conf /etc/nginx/sites-available/metabase.conf",
      "ln -sf /etc/nginx/sites-available/metabase.conf /etc/nginx/sites-enabled/metabase.conf",
      "add-apt-repository ppa:certbot/certbot -y",
      "apt update",
      "apt install -y certbot python-certbot-nginx python3-certbot-dns-cloudflare",
      "mkdir -p /root/.secrets/certbot/",
      "echo 'dns_cloudflare_api_token = {{user `cloudflare_api_token`}}' >> /root/.secrets/certbot/cloudflare.ini",
      "echo 'dns_cloudflare_api_key = {{user `cloudflare_api_key`}}' >> /root/.secrets/certbot/cloudflare.ini",
      "echo 'dns_cloudflare_email = {{user `cloudflare_email`}}' >> /root/.secrets/certbot/cloudflare.ini",
      "chmod 400 /root/.secrets/certbot/cloudflare.ini",
      "certbot certonly -m {{user `cloudflare_email`}} --agree-tos --dns-cloudflare --dns-cloudflare-credentials /root/.secrets/certbot/cloudflare.ini --dns-cloudflare-propagation-seconds 60 -d metabase.sproutfy.com.br",
      "mv /tmp/certbot /etc/cron.d/certbot",
      
      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  },
  {
    "type": "file",
    "source": "packer/metabase.nginx.conf",
    "destination": "/etc/nginx/sites-available/metabase.conf"
  },
  {
    "type": "file",
    "source": "packer/certbot",
    "destination": "/tmp/certbot"
  }]
}